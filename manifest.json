{
    "name": "app-classificacao-doc-dev",
    "version": "1.0.0",
    "description": "Classificação de Documento Jurídico: Identifica automaticamente o tipo de documento (contrato, sentença, petição etc.)",
    "auth": {
        "description": {
            "title": "Configuração de Acesso",
            "body": "Configure suas credenciais para acessar o serviço.",
            "footer": "As credenciais são armazenadas com segurança.",
            "link": ""
        },
        "params": [            {
                "name": "whichToken",
                "type": "string",
                "inputType": "text",
                "required": true,
                "label": "Token do Which"
            }       
        ]
    },
    "functions": {        
        "classificarDocumento": {
            "script": "dist/classificarDocumento.js",
            "description": "Classifica tipo de documento jurídico",
            "category": "judicial",
            "values": {
                "parametro": "valor"
            },
            "params": [
                {
                    "name": "parametro",
                    "type": "string",
                    "inputType": "text",
                    "required": true,
                    "label": "Parâmetro principal"
                }
            ]        },
        "detectarCategoria": {
            "script": "dist/detectarCategoria.js",
            "description": "Detecta categoria de documento",
            "category": "judicial",
            "values": {
                "parametro": "valor"
            },
            "params": [
                {
                    "name": "parametro",
                    "type": "string",
                    "inputType": "text",
                    "required": true,
                    "label": "Parâmetro principal"
                }
            ]        }    },
    "config": {
        "timeout": 60000,
        "max_retries": 3,
        "cache_ttl": 3600
    },
    "mcp": true
}
